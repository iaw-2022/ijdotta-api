{
  "name": "clinicapp-api",
  "version": "1.0.0",
  "description": "API for the frontend of the clinic app",
  "main": "index.js",
  "scripts": {
    "_copy-files": "copyfiles -e \"**/*.{js,ts,tsx,jsx}\" -u 1 --soft -V \"src/**/*\" build",
    "build": "tsc --project tsconfig.json && npm run _copy_files",
    "start": "link-module-alias && node -r dotenv/config ./build/index.js dotenv_config_path=./.env",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/iaw-2022/ijdotta-api.git"
  },
  "keywords": [
    "api",
    "clinic"
  ],
  "author": "Ignacio Joaqu√≠n Dotta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iaw-2022/ijdotta-api/issues"
  },
  "homepage": "https://github.com/iaw-2022/ijdotta-api#readme",
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "ajv": "^8.11.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "link-module-alias": "^1.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "copyfiles": "^2.4.1",
    "prisma": "^3.14.0",
    "typescript": "^4.6.4"
  },
  "files": [
    "build/**/*"
  ],
  "_moduleAliases": {
    "~": "build"
  }
}
